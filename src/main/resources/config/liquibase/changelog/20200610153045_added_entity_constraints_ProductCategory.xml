<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity ProductCategory.
    -->
    <changeSet id="20200610153045-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="product_category"
                                 constraintName="fk_product_category_parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="product_category"/>

        <addForeignKeyConstraint baseColumnNames="icon_id"
                                 baseTableName="product_category"
                                 constraintName="fk_product_category_icon_id"
                                 referencedColumnNames="id"
                                 referencedTableName="photos"/>

    </changeSet>
</databaseChangeLog>
